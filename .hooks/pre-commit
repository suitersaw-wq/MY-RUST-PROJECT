#!/bin/sh

echo "Running pre-commit checks..."

# Check formatting
echo "Checking formatting..."
cargo fmt --check
if [ $? -ne 0 ]; then
    echo "❌ Formatting check failed. Run 'cargo fmt' to fix."
    exit 1
fi

# Run clippy
echo "Running clippy..."
cargo clippy -- -D warnings
if [ $? -ne 0 ]; then
    echo "❌ Clippy found issues."
    exit 1
fi

# Run tests
echo "Running tests..."
cargo test --quiet
if [ $? -ne 0 ]; then
    echo "❌ Tests failed."
    exit 1
fi

echo "✅ All checks passed!"
